// Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Todo {
  id      Int    @id @default(autoincrement())
  title   String
  content String
  color   Int
  status  Status // Enum f√∂r status
}

enum Status {
  TODO
  IN_PROGRESS
  DONE
}
